{% if interface.static %}
network  --onboot yes --bootproto=static --ip={{ interface.ipaddress }} --netmask={{ interface.netmask }} --gateway={{ interface.gateway }} --nameserver={{ interface.nameservers | join(',')}} --noipv6 --hostname {{ hostname }}
{% else %}
